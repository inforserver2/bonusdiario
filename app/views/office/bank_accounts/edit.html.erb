<%= link_to "voltar", office_user_path(current_user) %>
<h2>Edição do endereço</h2>
<%= form_for [:office,@bank_account] do |f| %>
  
  <%= render :partial=>"partials/errors", :locals=>{:obj=>@bank_account} %>
  
  <div class=field>
    <%= f.label :bank %><br/>
    <%= f.collection_select(:bank_id, Bank.all, :id, :name, :prompt=>true) %>
  </div>
  
  <div class=field>
    <%= f.label :bank_account_type %><br/>
    <%= f.collection_select(:bank_account_type_id, BankAccountType.all, :id, :name, :prompt=>true) %>
  </div>
  
  <div class=field>
    <%= f.label :agency %><br/>
    <%= f.text_field :agency %>
  </div>

  <div class=field>
    <%= f.label :account %><br/>
    <%= f.text_field :account %>
  </div>

  <div class=field>
    <%= f.label :cpf_owner %><br/>
    <%= f.text_field :cpf_owner %>
  </div>

  <div class=field>
    <%= f.label :fullname_owner %><br/>
    <%= f.text_field :fullname_owner %>
  </div>

  <div class=field>
    <%= f.label :extra %><br/>
    <%= f.text_area :extra %>
  </div>
  
  <%= button_submit_tag "Atualizar" %>

<% end %>
