<h2>Contato</h2>
<table cellspacing="0">
  <tr>
    <td>Nome:</td>
    <td><%= @contact[:name] %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td><%= @contact[:email] %></td>
  </tr>
  <tr>
    <td>Assunto:</td>
    <td><%= @contact[:subject] %></td>
  </tr>
  <tr>
    <td>Mensagem:</td>
    <td><%= simple_format @contact[:message] %></td>
  </tr>
  <tr>
    <td>Origem:</td>
    <td><%= root_url :subdomain=>@contact[:sponsor_name] %></td>
  </tr>
</table>
