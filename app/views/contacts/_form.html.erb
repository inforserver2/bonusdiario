<%= form_for @contact do |f| %>
 <%= render :partial => "partials/errors", :locals => { :obj => @contact } %>
 
  <div class="field">
    <%= f.label :name, :class=>:needed  %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, :class=>:needed  %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :subject, :class=>:needed  %><br/>

    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :message, :class=>:needed  %><br/>

    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= button_submit_tag "Enviar" %>
  </div>
<% end %>
